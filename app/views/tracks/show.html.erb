<% provide :title, full_title(t(".title")) %>

<body>
  <%= render "shared/swipe", track: @track, genres_map: @genres_map %>
  <div class="container contant">
    <div class="row">
      <div class="site-overlay"></div>
      <div class="col-md-3 mobile-none sidebar">
        <img src="http://i.imgur.com/8Hob1Ge.jpg" class="user-image" alt="#">
        <div class="address">
          <h3><%= t ".title" %></h3>
          <span><%= t ".tracks" %></span>
          <span><%= t ".followers" %></span>
        </div>

        <div class="similar">
          <h3><%= t ".more" %><%= t ".title" %></h3>
          <% 3.times do |n| %>
            <div>
              <img src="http://i.imgur.com/XaZCBtV.png" alt="#">
              <%= link_to t(".title"), "#", method: :get %>
              <%= link_to t(".title"), "#", method: :get %>
              <i class="fa fa-thumbs-o-up"></i><%= t ".title" %>
            </div>
          <% end %>
        </div>
        <div class="similar">
          <h3><%= t ".related" %></h3>
          <% 3.times do |n| %>
            <div>
              <img src="http://i.imgur.com/XaZCBtV.png" alt="#">
              <%= link_to t(".title"), "#", method: :get %>
              <%= link_to t(".title"), "#", method: :get %>
              <i class="fa fa-thumbs-o-up"></i><%= t ".title" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-9 basic">
        <%= render "shared/header" %>
        <div class="header-section">
          <img src="http://i.imgur.com/XaZCBtV.png" alt="">
          <h1><%= t ".title" %></h1>
          <ul>
            <li><%= link_to t(".title"), "#", method: :get %></li>
          </ul>
        </div>
        <div class="phone-email">
          <span><i class="fa fa-phone"></i>
            <%= link_to t(".title"), "#", method: :get %>
          </span>
        </div>
        <div class="icon-descr-block">
          <div class="cols">
            <div class="icons id-orange">
              <span class="ic"><i class="fa fa-comments-o"></i></span>
              <span class="num"><%= t ".title" %></span>
            </div>
            <div class="icons id-green">
              <span class="ic"><i class="fa fa-users"></i></span>
              <span class="num"><%= t ".title" %></span>
            </div>
            <div class="icons id-blue">
              <span class="ic"><i class="fa fa-globe"></i></span>
              <span class="num"><%= t ".title" %></span>
            </div>
          </div>
          <div class="bubble">
            <div><%= t ".title" %></div>
          </div>
        </div>

        <div class="share-block">
          <div><%= link_to t(".share"), "#",
            class: "green-button", method: :get %></div>
          <div>
            <div>
              <span><%= t ".total_play" %></span>
              <%= t ".totals" %>
            </div>
          </div>
        </div>

        <div class="check-in">
          <div>
            <%= link_to t(".title"), "#", method: :get %> <%= t ".likes" %>
            <div class="users-group">
              <% 3.times do |n| %>
                <%= link_to "#", class: "user-avatars", method: :get do %>
                  <div class="user-go"><i class="fa fa-link"></i></div>
                  <img src="http://i.imgur.com/8Hob1Ge.jpg" alt="">
                <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="reviews">
          <h4><%= t ".comments" %></h4>
          <% 6.times do |n| %>
            <div class="rev">
              <div class="user">
                <%= link_to "#", class: "user-avatars", method: :get do %>
                  <div class="user-go"><i class="fa fa-link"></i></div>
                  <img src="http://i.imgur.com/8Hob1Ge.jpg" alt="">
                <% end %>
              </div>
              <div class="texts">
                <div class="head-rev">
                  <%= link_to t(".title"), "#", method: :get %>
                  <span><%= t ".title" %></span>
                </div>
                <div class="text-rev"><%= t ".title" %></div>
              </div>
            </div>
          <% end %>
          <div class="add-comment">
            <h4><%= t ".add_comment" %></h4>
            <textarea></textarea>
            <%= link_to t(".add_comment"), "#", class: "btn btn-success",
              method: :get %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
