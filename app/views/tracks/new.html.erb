<% provide :title, full_title(t(".title")) %>

<body>
  <%= render "shared/swipe", track: @track, genres_map: @genres_map %>
  <div class="container contant">
    <div class="row">
      <div class="site-overlay"></div>

      <div class="col-md-12 basic">
        <%= render "shared/header" %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <h3><%= t ".upload_your" %><span></span></h3>
            <%= render "shared/upload_track",
              track: @track, genres_map: @genres_map,
              error: "render 'shared/error_messages', object: t.object" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

</body>
